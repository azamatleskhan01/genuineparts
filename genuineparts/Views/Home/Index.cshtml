@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f7f9fc;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        h1 {
            text-align: center;
            color: #2b4c7e;
            margin-bottom: 10px;
        }
        p {
            text-align: center;
            margin-bottom: 25px;
            color: #555;
        }
        .grid {
            max-width: 700px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 15px;
        }
        .item {
            background: white;
            padding: 15px;
            border-radius: 10px;
            border: 1px solid #e2e6ed;
            text-align: center;
            transition: 0.2s ease;
        }
        .item:hover {
            background: #eef3ff;
            transform: translateY(-3px);
        }
        .name {
            font-size: 1rem;
        }
        .price {
            margin-top: 5px;
            font-weight: bold;
            color: #2b4c7e;
        }
    </style>
</head>

<body>

    <h1>Welcome to Geniune Parts</h1>
    <p>Simple and clean auto parts catalog.</p>

    <div class="grid">
        <div class="item">
            <div class="name">Brake Pads</div>
            <div class="price">$45</div>
        </div>

        <div class="item">
            <div class="name">Air Filter</div>
            <div class="price">$15</div>
        </div>

        <div class="item">
            <div class="name">Oil Filter</div>
            <div class="price">$10</div>
        </div>

        <div class="item">
            <div class="name">Spark Plug</div>
            <div class="price">$8</div>
        </div>

        <div class="item">
            <div class="name">Car Battery</div>
            <div class="price">$85</div>
        </div>

        <div class="item">
            <div class="name">Headlight</div>
            <div class="price">$60</div>
        </div>
    </div>

</body>
</html>
