@model IEnumerable<genuineparts.Models.User>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Users List</h2>

<a class="btn btn-primary mb-3" href="/Users/Create">Add New User</a>

@if (!Model.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
            </tr>
        }
        </tbody>
    </table>
}